<?xml version="1.0" encoding="UTF-8" ?>
<schema>
    <indexName>order</indexName>
    <alias>order</alias>
    <dynamic>true</dynamic>
    <typeHandlers>
        <typeHandler>
            <name>stringToLong</name>
            <class>cc.doctor.wiki.search.server.index.store.schema.typehandlers.StringToLongTypeHandler</class>
        </typeHandler>
    </typeHandlers>
    <properties>
        <property>
            <name>id</name>
            <type>long</type>
            <index>not_analyzed</index>
        </property>
        <property>
            <name>name</name>
            <type>string</type>
            <index>analyzed</index>
            <filters>
                <filter>null</filter>
            </filters>
            <tokenizer>whitespace</tokenizer>
            <source>false</source>
        </property>
        <property>
            <name>create_time</name>
            <type>date</type>
            <pattern>yyyy-MM-dd HH:mm:ss</pattern>
            <index>not_analyzed</index>
        </property>
    </properties>
</schema>